{
  "name": "mltap",
  "version": "0.0.1",
  "description": "TAP producer and test runner for MarkLogic",
  "main": "runner.js",
  "directories": {
    "test": "test"
  },
  "bin": {
    "mltap": "node/bin/mltap.js"
  },
  "scripts": {
    "test": "tape node/test/*.test.js",
    "test-pretty": "tape test/*.test.js | tap-notify | tap-diff",
    "test-marklogic": "bin/mltap test/*.test.sjs",
    "test-marklogic-pretty": "bin/mltap test/*.test.sjs | tap-notify | tap-diff",
    "config": "gradle mlDeploy",
    "deploy": "./scripts/deploy-modules.sh",
    "setup": "npm run env && npm run deploy && npm run config",
    "env": "if [ -z ${ML_HOME+x} ]; then echo 'The environment variable ML_HOME is empty or missing' && exit 1; else echo $ML_HOME; fi"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmakeig/mltap.git"
  },
  "keywords": [
    "tap",
    "test",
    "tape",
    "marklogic"
  ],
  "author": "Justin Makeig <jmpublic+github@makeig.com> (https://www.github.com/jmakeig)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/jmakeig/mltap/issues"
  },
  "homepage": "https://github.com/jmakeig/mltap#readme",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.16.0",
    "babel-plugin-transform-es2015-block-scoping": "^6.15.0",
    "babel-plugin-transform-es2015-for-of": "^6.8.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "eslint": "^3.7.1",
    "tap-out": "^1.4.2",
    "tap-parser": "^3.0.3",
    "tape": "^4.6.0"
  },
  "optionalDependencies": {
    "faucet": "0.0.1",
    "tap-diff": "^0.1.1",
    "tap-notify": "^1.0.0"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "docopt": "^0.6.2",
    "marklogic": "^1.0.5",
    "pretty-format": "^4.0.0",
    "stack-trace": "0.0.9"
  }
}
